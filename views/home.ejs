<div class="post-1">
    <% posts.forEach(post => { %>
        <div class="post">
            <h2><%= post.title %> </h2>
            <p><%= post.content.substr(0, 100) + " ..." %> <a href="/posts/<%= post.title %>">Read more</a> </p>
        </div>
    <% }) %>
</div>

