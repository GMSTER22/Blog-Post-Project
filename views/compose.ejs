<%- include("partials/header") %> 

<h1>Compose</h1>

<form class="" action="/compose" method="post">
    <div class="form-group">
        <label for="title" class="form-label">Title</label>
        <input autocomplete="false" autofocus type="text" name="postTitle" class="form-control" id="title" required>
    </div>
    <div class="form-group">
        <label for="author" class="form-label">Author</label>
        <input autocomplete="false" type="text" name="postAuthor" class="form-control" id="author" required>
    </div>
    <div class="form-group">
        <label for="post" class="form-label">Post</label>
        <textarea autocomplete="false" type="text" name="postBody" class="form-control" id="post" rows="8"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") %> 

